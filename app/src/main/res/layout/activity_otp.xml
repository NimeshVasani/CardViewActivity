<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Veryfication"
            android:textColor="#1c8ae3"
            android:textSize="34sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="14dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/reg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Mobile Number"
            android:textAlignment="center"
            app:met_baseColor="#fff"
            app:met_floatingLabel="normal"

            app:met_textColor="#fff"
            app:met_textColorHint="#FFE4D1D1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reg_otp"
            app:met_baseColor="#fff"
            android:layout_marginTop="10dp"
            app:met_textColorHint="#FFE4D1D1"
            app:met_textColor="#fff"
            android:textAlignment="center"
           android:inputType="number"
            app:met_floatingLabel="normal"
            android:hint="Otp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Otp"
                android:id="@+id/reg_phone_btn"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorText"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:text="There was some error"
            android:visibility="invisible"
            />



    </LinearLayout>
</LinearLayout>